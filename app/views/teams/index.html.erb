<%= @users.count %>
<%= @pickup_user.name if defined? @pickup_user %>
<h1>Listing teams</h1>
<%= link_to "조편성", '/teambuilding', class: 'btn btn-lg btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4">Members</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td colspan="4">
        <% team.users.each do |member| %>
          <%= member.name %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>