<% provide(:title, @lesson.title) %>

<div class="row">

  <!-- aside -->
  <aside>
    <div class="col-md-4 col-lg-3">
      <%= render 'courses/course', {course: @course} %>
      <!-- # 나중에 여기다가 미니맵 형식의 인덱스를 뿌려줄거야 -->
    </div>
  </aside> <!-- aside -->

  <!-- content -->
  <div class="col-md-8 col-lg-9">
    <%= render 'lectures/lecture', {lecture: @lecture} %>
    <%= render 'lessons/lesson', {lesson: @lesson} %>
    <%= render 'practices/practices', {practices: @practices} %>
    
    <!-- fb- comment -->
    <div data-no-turbolinks class="fb-comments" data-href="http://cloudstudying.com/lessons/<%= @lesson.id %>" data-width="100%" data-numposts="5" data-colorscheme="light"></div> <!-- fb- comment -->
  </div>  <!-- content -->

</div>
