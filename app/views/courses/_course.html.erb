<!-- course-#id -->
<section class="col-sm-4" id="course-<%= course.id %>">
  <div class="thumbnail">
    <%= image_tag(course.image.url(:medium), alt: course.name) %>
    <div class="caption">
      <h3 class="name"><%= link_to course.name, course %></h3>
      <p class="description"><%= course.description %></p>
      <% if admin_user? %>
      <p>
        <%= link_to t('app.edit'), edit_course_path(course), class: 'btn btn-sm btn-primary' %>
        <%= link_to t('app.destroy'), course, method: :delete,
data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </p>
      <% end %>
    </div>
  </div>
</section>