<%= form_for(@course) do |f| %>

  <div class="form-group <%= bs_validation(:name, @course) %>">
    <%= f.label(:name, t('activerecord.attributes.course.name')) %>
    <%= f.text_field(:name, class: "form-control input-lg", placeholder: t('course.placeholder.name')) %>
    <%= bs_validation_icon(:name, @course) %>
    <%= bs_validation_message(:name, @course.errors) %>
  </div>

  <div class="form-group <%= bs_validation(:description, @course) %>">
    <%= f.label(:description, t('activerecord.attributes.course.description')) %>
    <%= f.text_area(:description, rows: 3, class: "form-control input-lg", placeholder: t('course.placeholder.description')) %>
    <%= bs_validation_icon(:description, @course) %>
    <%= bs_validation_message(:description, @course.errors) %>
  </div>

  <div class="form-group <%= bs_validation(:image, @course) %>">
    <%= f.label(:image, t('activerecord.attributes.course.image')) %>
    <%= f.file_field :image %>
    <% unless @course.image.url.include?(Course::DEFAULT_IMAGE) %>
      <%= image_tag(@course.image.url, alt: @course.name) %>
    <% end %>
    <%= bs_validation_icon(:image, @course) %>
    <%= bs_validation_message(:image, @course.errors) %>
  </div>

  <div class="actions">
    <%= f.submit t('course.submit'), class: "btn btn-lg btn-form-control btn-primary" %>
  </div>
<% end %>
