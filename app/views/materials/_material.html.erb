<!-- material-#id -->
<section class="material" id="material-<%= material.id %>">
  <div class="thumbnail">
    <%= image_tag(material.image.url(:medium), alt: material.name, class: "image") %>
    <div class="caption">
      <h3 class="name"><%= link_to material.name, material.link, target: "_blank" %></h3>
      <p class="description"><%= material.description %></p>
      <% if admin_user? %>
      <p>
        <%= link_to t('app.edit'), edit_material_path(material), class: 'btn btn-sm btn-primary' %>
        <%= link_to t('app.destroy'), material, method: :delete,
data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </p>
      <% end %>
    </div>
  </div>
</section>