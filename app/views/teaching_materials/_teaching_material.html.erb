<!-- teaching-material-#id -->
<section class="teaching-material" id="teaching-material-<%= teaching_material.id %>">
  <div class="thumbnail">
    <%= image_tag(teaching_material.image.url(:medium), alt: teaching_material.name, class: "image") %>
    <div class="caption">
      <h3 class="name"><%= link_to teaching_material.name, teaching_material.link, target: "_blank" %></h3>
      <p class="description"><%= teaching_material.description %></p>
      <% if admin_user? %>
      <p>
        <%= link_to t('app.edit'), edit_teaching_material_path(teaching_material), class: 'btn btn-sm btn-primary' %>
        <%= link_to t('app.destroy'), teaching_material, method: :delete,
data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </p>
      <% end %>
    </div>
  </div>
</section>