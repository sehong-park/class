<div class="col-xs-6 col-sm-4 col-md-3" id="user-<%= user.id %>">
  <div class="thumbnail">
    <%= image_tag(user.avatar.url(:medium), alt: user.name) %>
    <div class="caption">
      <h3 class="name"><%= user.name %></h3>
      <p><strong><%= t 'activerecord.attributes.user.email'%>:</strong> <%= user.email %></p>
      <p><strong><%= t 'activerecord.attributes.user.phone'%>:</strong> <%= user.phone %></p>
      <p><strong><%= t 'activerecord.attributes.user.std_num'%>:</strong> <%= user.std_num %></p>
      <% if admin_user? %>
      <p>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', user, method: :delete,
data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </p>
      <% end %>
    </div>
  </div>
</div>