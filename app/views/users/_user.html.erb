<div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 user" id="user-<%= user.id %>">
  <div class="thumbnail">
    
    <%= image_tag(user.avatar.url(:medium), alt: user.name) %>
    
    <div class="caption">
      
      <h3 class="name">
        <%= user.name %>
        <%= link_to(t('app.edit'), edit_user_path(user), class: 'btn btn-sm btn-primary') if current_user?(user) || admin_user? %>
        <%= link_to(t('app.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger') if admin_user? %>
      </h3>
      
      <div class="caption-body">
        <p><strong><%= t 'activerecord.attributes.user.std_num'%>:</strong> <%= user.std_num %></p>
        <p><strong><%= t 'activerecord.attributes.user.email'%>:</strong> <%= user.email %></p>
        <p>
          <strong><%= t 'activerecord.attributes.user.phone'%>:</strong>
          <%= (current_user?(user) || admin_user?) ? user.phone : '비공개' %>
        </p>
        
      </div> <!-- caption-body -->
    </div> <!-- caption -->
  </div> <!-- thumbnail -->
</div> <!-- user-id -->