<h1>Listing practices</h1>

<table>
  <thead>
    <tr>
      <th>Lesson</th>
      <th>Question</th>
      <th>Right answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @practices.each do |practice| %>
      <tr>
        <td><%= practice.lesson_id %></td>
        <td><%= practice.question %></td>
        <td><%= practice.right_answer %></td>
        <td><%= link_to 'Show', practice %></td>
        <td><%= link_to 'Edit', edit_practice_path(practice) %></td>
        <td><%= link_to 'Destroy', practice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Practice', new_practice_path %>
